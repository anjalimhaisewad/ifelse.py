salary=int(input("enter a salary"))
if salary<=10000:
    hra=salary*20/100
    da=salary*80/10
    print(salary+hra+da)
elif salary<=20000:
    hra=salary*25/100
    da=salary*90*100
    print(salary+hra+da)
elif salary>20000:
    hra=salary*30/100
    da=salary*95/100
    print(salary+hra+da)
else:
    print("enter salary")

